<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.CentreDeDonDialogController"
            prefWidth="500.0" prefHeight="400.0">
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>

            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS"/>

            <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Telephone:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="telephoneField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Latitude:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="latitudeField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label text="Longitude:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="longitudeField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="100"/>
                <ColumnConstraints hgrow="ALWAYS" prefWidth="300"/>
            </columnConstraints>
        </GridPane>
    </content>

    <ButtonType fx:constant="OK"/>
    <ButtonType fx:constant="CANCEL"/>

    <header>
        <Label fx:id="dialogTitle" text="Centre De Don Details">
            <font>
                <Font size="18.0" name="System Bold"/>
            </font>
            <padding>
                <Insets top="10.0" right="0.0" bottom="10.0" left="10.0"/>
            </padding>
        </Label>
    </header>
</DialogPane> 