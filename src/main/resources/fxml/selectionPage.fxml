<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #F5F7FA;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SelectionPageController">
    <children>
        <VBox alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="500.0" prefWidth="700.0" spacing="30.0">
            <children>
                <Label text="Inventory Management System" textFill="#2C3E50">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>
                
                <Label text="Select your access type" textFill="#34495E">
                    <font>
                        <Font size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="40.0" />
                    </VBox.margin>
                </Label>
                
                <Button fx:id="btnAdmin" mnemonicParsing="false" onAction="#navigateToAdmin" prefHeight="60.0" prefWidth="250.0" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-background-radius: 5;" text="Admin">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                
                <Button fx:id="btnClient" mnemonicParsing="false" onAction="#navigateToClient" prefHeight="60.0" prefWidth="250.0" style="-fx-background-color: #42A5F5; -fx-text-fill: white; -fx-background-radius: 5;" text="Client">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane> 