<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AppointmentsController">
    <VBox alignment="CENTER" spacing="20.0">
        <Button fx:id="backButton" text="Back" onAction="#onBack" style="-fx-background-color: #cccccc; -fx-text-fill: #222;" alignment="CENTER_LEFT" />
        <Label text="Appointments Services" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="26.0" />
            </font>
        </Label>
        <Label text="Choose a service to get started" textFill="#757575">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="20.0">
            <VBox alignment="CENTER" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
                <Label text="Service Providers Table" textAlignment="CENTER">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>
                <Label text="View all service providers" textFill="#757575" textAlignment="CENTER" wrapText="true" />
                <Button fx:id="serviceProviderTableButton" text="Service Providers" onAction="#onServiceProviderTable" style="-fx-background-color: #8e44ad; -fx-text-fill: white;" />
            </VBox>
            <VBox alignment="CENTER" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
                <Label text="Make an Appointment" textAlignment="CENTER">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>
                <Label text="Book a new appointment" textFill="#757575" textAlignment="CENTER" wrapText="true" />
                <Button fx:id="makeAppointmentButton" text="Make Appointment" onAction="#onMakeAppointment" style="-fx-background-color: #2ECC71; -fx-text-fill: white;" />
            </VBox>
            <VBox alignment="CENTER" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
                <Label text="View Appointments" textAlignment="CENTER">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>
                <Label text="See your upcoming appointments" textFill="#757575" textAlignment="CENTER" wrapText="true" />
                <Button fx:id="viewAppointmentsButton" text="View Appointments" onAction="#onViewAppointments" style="-fx-background-color: #E67E22; -fx-text-fill: white;" />
            </VBox>
            <VBox alignment="CENTER" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
                <Label text="Add New Service Provider" textAlignment="CENTER">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>
                <Label text="Add a new service provider" textFill="#757575" textAlignment="CENTER" wrapText="true" />
                <Button fx:id="addServiceProviderButton" text="Add Service Provider" onAction="#onAddServiceProvider" style="-fx-background-color: #16a085; -fx-text-fill: white;" />
            </VBox>
        </HBox>
    </VBox>
</StackPane> 