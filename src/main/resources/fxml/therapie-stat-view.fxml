<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f5f7fa;" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="Controllers.TherapieStatController">

   <children>
      <PieChart fx:id="pie" layoutX="150.0" layoutY="50.0" prefHeight="400.0" prefWidth="500.0" 
                style="
                    -fx-background-color: white;
                    -fx-background-radius: 10;
                    -fx-border-radius: 10;
                    -fx-border-color: #e0e0e0;
                    -fx-border-width: 1;
                    -fx-padding: 5;
                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
      </PieChart>

      <Button fx:id="close" layoutX="350.0" layoutY="520.0" mnemonicParsing="false" onAction="#close" 
              style="
                  -fx-background-color: #2A3B4C;
                  -fx-text-fill: white;
                  -fx-font-weight: bold;
                  -fx-background-radius: 5;
                  -fx-padding: 10 25;
                  -fx-font-size: 14px;
                  -fx-cursor: hand;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 0);" 
              text="Close">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane> 