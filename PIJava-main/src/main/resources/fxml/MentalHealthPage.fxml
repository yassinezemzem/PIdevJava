<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.MentalHealthController">
    <VBox alignment="CENTER" spacing="20.0">
        <Button fx:id="backButton" alignment="CENTER_LEFT" onAction="#onBack" style="-fx-background-color: #cccccc; -fx-text-fill: #222;" text="Back" />
        <Label text="Mental Health" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="26.0" />
            </font>
        </Label>
        <Label text="Choose a service to get started" textFill="#757575">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="20.0">
            <VBox alignment="CENTER" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
                <Label text="Therapy" textAlignment="CENTER">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>
                <Label text="Access therapy resources" textAlignment="CENTER" textFill="#757575" wrapText="true" />
                <Button fx:id="therapyButton" onAction="#onTherapy" style="-fx-background-color: #9B59B6; -fx-text-fill: white;" text="Therapy" />
            </VBox>
        </HBox>
    </VBox>
</StackPane>
